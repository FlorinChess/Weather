<Application x:Class="Weather.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Order is important; Fonts and Colors first -->
                <ResourceDictionary Source="./Themes/Fonts.xaml" />
                <ResourceDictionary Source="./Themes/Colors.xaml" />

                <ResourceDictionary Source="./Themes/Buttons.xaml" />
                <ResourceDictionary Source="./Themes/CheckBoxes.xaml" />
                <ResourceDictionary Source="./Themes/ListViews.xaml" />
                <ResourceDictionary Source="./Themes/Scrollbar.xaml" />
                <ResourceDictionary Source="./Themes/TextBoxes.xaml" />
                <ResourceDictionary Source="./Themes/TextBlocks.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
